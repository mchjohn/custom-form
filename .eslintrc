{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "import/prefer-default-export": 0,
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": "off",
        "import/no-extraneous-dependencies":[
          "error",
          {
            "devDependencies":[
                "**/*.test.ts",
                "**/*.test.tsx"
            ]
          }
        ]
    }
}
